@model LUSSISADTeam10Web.Models.Clerk.InventoryCheckViewModel

@{
    ViewBag.Title = "Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
    </style>
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Inventories</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="@Url.Action("Index", "Clerk")">Dashboard</a></li>
                    <li class="active">Inventory List</li>
                </ol>
            </div>
        </div>
    </div>
</div>




    <div class="animated fadeIn">
        <div class="card">
            
            <div class="panel-group" id="accordion1" role="tablist">
                <div class="panel" style="border: 1px dotted skyblue; margin: 10px; padding:10px;">
                    <div class="panel-heading" role="tab" id="panel">
                        <h4 class="panel-title">
                           
                                <a class="text-info" data-toggle="collapse" data-parent="#accordion1" data-target="#collapseOne" href="#collapseOne" aria-expanded="true" aria-controls="accordion1">
                                    Reported Adjustments
                                </a>
                                
                        </h4>
                    </div>

                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="collapseOne">
                        <div class="panel">

                            <div class="panel-body">
                                <div class="card">

                                    <div class="card card-body" style="background-color:aliceblue">

                                        <table>
                                            <thead>
                                                <tr style="background-color:cadetblue;font-weight:600;color:white;height:50px;">
                                                    <th style="text-align:center">
                                                        IssueDate
                                                    </th>
                                                    <th style="text-align:center">
                                                        Category
                                                    </th>
                                                    <th style="text-align:center">
                                                        Item
                                                    </th>
                                                    <th style="text-align:center">
                                                        Stock
                                                    </th>
                                                    <th style="text-align:center">
                                                        Checked Qty
                                                    </th>
                                                    <th style="text-align:center">
                                                        UOM
                                                    </th>
                                                    <th style="text-align:center">
                                                        Reason
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var ad in @Html.ViewBag.AdjustmentDetailModel)
                                                {
                                                    <tr style="height:30px">
                                                        <td style="text-align:center">
                                                            @Convert.ToDateTime(@ad.IssueDate).ToString("dd/MM/yyyy")
                                                        </td>
                                                        <td style="text-align:center">
                                                            @ad.CategoryName
                                                        </td>
                                                        <td style="text-align:center">
                                                            @ad.Itemdescription
                                                        </td>
                                                        <td style="text-align:center">
                                                            @ad.Stock
                                                        </td>
                                                        <td style="text-align:center">
                                                            @ad.Adjustedqty
                                                        </td>
                                                        <td style="text-align:center">
                                                            @ad.UOM
                                                        </td>
                                                        <td style="text-align:center">
                                                            @ad.Reason
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
<div class="card">
    <div class="card-header">
        <i class="mr-2 fa fa-align-justify"></i>
        <strong class="card-title"> Inventories </strong>
    </div>
    <div class="card-body">
        <div>  <h5 class="text-sm-center text-info"> <i class="ti-marker-alt fa-3x"></i><br /> Inventory Check </h5></div><br />
        <div class="row">
            <div class="col-sm-12">
                <form asp-action="Inventory" asp-controller="Clerk" method="post">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered">
                        <thead class="table-info">
                            <tr>
                                <th style="text-align:center">Category</th>
                                <th style="text-align:center">Items</th>
                                <th style="text-align:center">Stock</th>
                                <th style="text-align:center">UOM</th>
                                <th style="text-align:center">Location</th>
                                <th style="text-align:center">Discrepancy</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Invs)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ItemDescription)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Stock)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UOM)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Shelf)
                                        @Html.DisplayFor(modelItem => item.Level)
                                    </td>
                                    <td style="text-align:center">
                                        <div class="form-check">
                                            <input class="form-check-input" name="InvID" type="checkbox" asp-for="@Model.InvIDs" value="@item.InventoryId" id="checkbox">
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <input type="submit" value="Submit" class="btn btn-success btn pull-right" />
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script type="text/javascript"></script>
    <link href="~/Styles/css/accordion.css" rel="stylesheet" />
}
