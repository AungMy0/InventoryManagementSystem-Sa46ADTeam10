@model IEnumerable<LUSSISADTeam10Web.Models.APIModels.BreakdownByDepartmentModel>

@{
    ViewBag.Title = "Track Requisition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {

    <style>
        @@media print {
            body *{
                visibility: hidden;
            }

            #StationaryRetrivalForm, #StationaryRetrivalForm * {
                visibility: visible;
            }

            #StationaryRetrivalForm {
                position: absolute;
                left: 0;
                top: 0;
            }
        }
    </style>
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Stationary Retrieval Form</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="@Url.Action("Index", "Clerk")">Dashboard</a></li>
                    <li class="active">Stationary Retrieval Form</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">


        <div class="card">
            <div class="card-header">
                <i class="mr-2 fa fa-align-justify"></i>
                <strong class="card-title"> Stationary Retrieval Form </strong>
            </div>
            <div class="card-body">

                @if (Model.Count() > 0)
                {
                    <div>
                        <a href="@Url.Action("UpdateToPreparing", "Clerk")" class="btn btn-outline-success pull-right" onclick="return confirm('Are you sure you already collected all items in this list?')">Item Collected <i class="fa fa-arrow-right"></i></a>
                        <a href="@Url.Action("Requisition", "Clerk")" class="btn btn-outline-success pull-left"> <i class="fa fa-arrow-left"></i> Add More Requisitons </a>

                        <br />
                        <br />

                    </div>
                    <hr />

                    <div id="StationaryRetrivalForm">
                        <h5 class="text-info text-center"> Stationary Retrival Form - @DateTime.Now.ToShortDateString() <span class="pull-right" id="print"><i class="ti-printer"></i></span> </h5>
                        <br />
                        <table class="table table-bordered">
                            <thead class="thead-dark text-primary text-center">
                                <tr>
                                    <td rowspan="2">Item ID</td>
                                    <td rowspan="2">Item Description</td>
                                    <td rowspan="2">Total Quantity</td>
                                    <td colspan="2">
                                        Breakdown By Department
                                    </td>
                                </tr>
                                <tr>
                                    <td>Department</td>
                                    <td>Qty</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    bool AlreadyShown = false;

                                    foreach (var i in item.BDList)
                                    {
                                        <tr>
                                            @if (!AlreadyShown)
                                            {
                                                <td>@item.ItemID</td>
                                                <td>@item.ItemDescription</td>
                                                <td>@item.TotalQty</td>

                                                AlreadyShown = true;
                                            }
                                            else
                                            {
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            }
                                            <td>@i.DeptName</td>
                                            <td>@i.Qty</td>
                                        </tr>

                                    }
                                }
                            </tbody>


                        </table>

                    </div>
                }

                else
                {
                    <span class="text-center text-danger">There is no items to retrieve yet!!!</span>
                }


            </div>
        </div>

        <div id="blah"></div>



    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $('#print').click(function () {
            window.print();
        });

    </script>
}
