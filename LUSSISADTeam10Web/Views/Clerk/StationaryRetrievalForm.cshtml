@model IEnumerable<LUSSISADTeam10Web.Models.Clerk.ShowBD>

@{
    ViewBag.Title = "Track Requisition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
    </style>
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Stationary Retrieval Form</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="@Url.Action("Index", "Clerk")">Dashboard</a></li>
                    <li class="active">Stationary Retrieval Form</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">


        <div class="card">
            <div class="card-header">
                <i class="mr-2 fa fa-align-justify"></i>
                <strong class="card-title"> Stationary Retrieval Form </strong>
            </div>
            <div class="card-body">

                <table>

                    <tr>
                        <td>Item ID</td>
                        <td>Item Description</td>
                        <td>Total Quantity</td>
                        <td>Breakdown By Department</td>
                    </tr>

                    @foreach (var item in Model)
                    {
                    <tr>

                        <td>@item.ItemID</td>
                        <td>@item.ItemDescription</td>
                        <td>@item.Qty</td>
                        <td>
                            <table>
                                <thead>
                                    <tr>
                                        <td>Department</td>
                                        <td>Qty</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in item.BDList)
                                    {
                                    <tr>
                                        <td>@i.DeptName</td>
                                        <td>@i.Qty</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>


                        </td>

                    </tr>
                    }


                </table>



            </div>
        </div>



    </div>
</div>

@section Scripts {
    <script type="text/javascript"></script>
}
