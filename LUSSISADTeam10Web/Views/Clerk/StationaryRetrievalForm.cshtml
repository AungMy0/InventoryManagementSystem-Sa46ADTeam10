@model IEnumerable<LUSSISADTeam10Web.Models.APIModels.BreakdownByDepartmentModel>

@{
    ViewBag.Title = "Track Requisition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {

    <style>
        @@media print {
            body * {
                visibility: hidden;
            }

            #StationaryRetrivalForm, #StationaryRetrivalForm * {
                visibility: visible;
            }

            #StationaryRetrivalForm {
                position: absolute;
                left: 0;
                top: 0;
            }
        }
    </style>
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Stationary Retrieval Form</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="@Url.Action("Index", "Clerk")">Dashboard</a></li>
                    <li class="active">Stationary Retrieval Form</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">


        <div class="card">
            <div class="card-header">
                <i class="mr-2 fa fa-align-justify"></i>
                <strong class="card-title"> Stationary Retrieval Form </strong>
            </div>
            <div class="card-body">
               

                @if (Model.Count() > 0)
                {
                    <div>
                        <button type="button" onclick="ConfirmDelete()" class="btn btn-outline-success pull-right" data-toggle="modal" data-target="#myModal">
                            Item Collected<i class="fa fa-arrow-right"></i>
                        </button>

                        <a href="@Url.Action("Requisition", "Clerk")" class="btn btn-outline-success pull-left"> <i class="fa fa-arrow-left"></i> Add More Requisitons </a>

                        <br />
                        <br />

                    </div>
                    <hr />

                    <div id="StationaryRetrivalForm">
                        <h5 class="text-info text-center"><i class="fa fa-file-pdf-o fa-3x"></i><br /><br /> Stationary Retrival Form - @DateTime.Now.ToShortDateString() <span class="pull-right" id="print"><i class="ti-printer"></i></span> </h5>
                        <br />
                        <table class="table table-bordered">
                            <thead class="thead-dark text-primary text-center">
                                <tr>
                                    <td rowspan="2">Item ID</td>
                                    <td rowspan="2">Item Description</td>
                                    <td rowspan="2">Total Quantity</td>
                                    <td colspan="2">
                                        Breakdown By Department
                                    </td>
                                </tr>
                                <tr>
                                    <td>Department</td>
                                    <td>Qty</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    bool AlreadyShown = false;

                                    foreach (var i in item.BDList)
                                    {
                                        <tr>
                                            @if (!AlreadyShown)
                                            {
                                                <td>@item.ItemID</td>
                                                <td>@item.ItemDescription</td>
                                                <td>@item.TotalQty</td>

                                                AlreadyShown = true;
                                            }
                                            else
                                            {
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            }
                                            <td>@i.DeptName</td>
                                            <td>@i.Qty</td>
                                        </tr>

                                    }
                                }
                            </tbody>


                        </table>

                    </div>
                }

                else
                {
                    <span class="text-center text-danger">There is no items to retrieve yet!!!</span>
                }


            </div>
        </div>

        <div id="blah"></div>



    </div>
</div>



<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <i class="fa fa-exclamation-triangle alert-warning" style="font-size : 40px "></i><h5 class="modal-title " id="smallmodalLabel"> &nbsp; &nbsp; Remove Authority</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>
            <div class="modal-body">
                <h5>Do you want to Remove Authority  </h5>

                <div style="text-align:center;display:none" id="loaderDiv">
                    <img src="~/Content/gif/InternetSlowdown_Day.gif" width="150" />
                </div>

            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                <a href="#" class="btn btn-success" onclick="ItemCollect()">Confirm</a>
            </div>

        </div>

    </div>

</div>





@section Scripts {
    <script src="~/Styles/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="~/Styles/js/popper.min.js"></script>
    <script src="~/Styles/js/plugins.js"></script>
    <script src="~/Styles/js/main.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>


        $('#print').click(function () {
            window.print();
        });

            var ConfirmDelete = function () {


                $("#myModal").modal('show');

            }

        var ItemCollect = function () {
            $("#loaderDiv").show();
              var url1 = '@Url.Action("DisbursementLists", "Clerk")';
            
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("UpdateToPreparing", "Clerk")',                   
                    success: function (ResultSuccess) {
                        $("#loaderDiv").hide();
                        $("#myModal").hide();
                       // Location.url: '@Url.Action("DisbursementLists", "Clerk")',
                        window.location.href = url1;
                    }

                })

            }
    </script>
}
