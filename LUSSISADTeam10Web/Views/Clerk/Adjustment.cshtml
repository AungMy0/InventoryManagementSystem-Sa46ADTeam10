@model LUSSISADTeam10Web.Models.Clerk.InventoryCheckViewModel

@{
    ViewBag.Title = "Adjustment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adjustment</h2>
<table id="bootstrap-data-table" class="table table-striped table-bordered">
    <tr>
        <th style="text-align:center">Category</th>
        <th style="text-align:center">Items</th>
        <th style="text-align:center">Stock</th>
        <th style="text-align:center">Current Qty</th>
        <th style="text-align:center">UOM</th>
        <th style="text-align:center">Location</th>
        
    </tr>
    <tr>
        <td></td>
    </tr>
    <form asp-action="Adjustment" asp-controller="Clerk" method="post">

        @foreach (var item in Model.Invs)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category)               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td style="column-width:inherit">
                @Html.TextBox("CurrentStock")
                <input type="hidden" name="Current" asp-for="Current" value="@item.Current" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UOM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shelf)
                @Html.DisplayFor(modelItem => item.Level)
            </td>

        </tr>
        <input type="hidden" name="InvID" asp-for="@Model.InvIDs" value="@item.InventoryId" />
        <input type="hidden" name="Current" value="@item.Current" />
}
        <tr style="border-bottom:hidden; border-right:hidden; border-left:hidden">
            <td colspan="100%">
                <input type="submit" value="Submit" class="btn btn-success btn pull-right" />
            </td>
        </tr>
    </form>

</table>

