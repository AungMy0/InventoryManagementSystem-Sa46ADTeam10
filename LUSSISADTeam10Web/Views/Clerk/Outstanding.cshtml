@model IEnumerable<LUSSISADTeam10Web.Models.APIModels.OutstandingReqModel>


@{
    ViewBag.Title = "Outstanding";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
    </style>
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Outstandings</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="@Url.Action("Index", "Clerk")">Dashboard</a></li>
                    <li class="active">Outstandings</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">


        <div class="card">
            <div class="card-header">
                <i class="mr-2 fa fa-align-justify"></i>
                <strong class="card-title"> Outstandings </strong>
            </div>
            <div class="card-body">

                <table id="myTable" class="table table-striped table-bordered">
                    <thead class="table-info">
                        <tr>
                            <th>
                                Req ID
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Department
                            </th>
                            <th>
                                Reason
                            </th>
                            <th>
                                Detail
                            </th>
                            <th>
                                Status
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in ViewBag.Outstandings)
                        {
                            <tr>
                                <td>
                                    @item.ReqId
                                </td>
                                <td>
                                    @item.ReqDate
                                </td>
                                <td>
                                    @item.DeptName
                                </td>
                                <td>
                                    @item.Reason
                                </td>
                                <td>
                                    @if (item.CanFullFill)
                                    {
                                        @if (item.Status == 0)
                                        {
                                            <a href="@Url.Action("OutstandingDetail", "Clerk", new { id = item.ReqId }, null)" class="btn btn-outline-info"> <i class="ti-anchor"></i>  Process</a>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("OutstandingDetail", "Clerk", new { id = item.ReqId }, null)" class="btn btn-outline-info"> <i class="ti-desktop"></i>  View</a>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-warning"> No Stock Avaiable Yet!</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>



    </div>
</div>

@section Scripts {
    <script type="text/javascript"></script>
}
