@model LUSSISADTeam10Web.Models.Clerk.InventoryTransactionViewModel

@{
    ViewBag.Title = "ItemTran";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
    </style>
}
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Item List</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Dashboard</a></li>

                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">@ViewBag.suppliername</strong>
                    </div>
                    <div class="card-body">
                        <form asp-action="SearchByTransDate" asp-controller="Clerk" method="get">
                      <div>
                                @Html.LabelFor(model => model.StartDate)
                                @Html.TextBoxFor(model => model.StartDate, new { id = "datepicker" })
                            </div><br />
                            <div>

                                @Html.LabelFor(model => model.EndDate)
                                @Html.TextBoxFor(model => model.EndDate, new { id = "datepicker1" })
                            </div>
                                  <div class="row m-md-5">
                                       <input type="Submit" class="btn btn-outline-success pull-left btn-flat m-b-30 m-t-30 pull-right" value="Search">
                                  </div>

                        </form>
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead class="table-info">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InvTrans[0].ItemID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InvTrans[0].Description)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InvTrans[0].UOM)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InvTrans[0].Transtype)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InvTrans[0].Qty)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InvTrans[0].Date)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InvTrans[0].Remark)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.InvTrans)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ItemID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UOM)
                                        </td>
                                        <td>
                                            @if (item.Transtype == 0)
                                            {
                                                <h6>Adjustment</h6>
                                            }
                                            else if (item.Transtype == 1)
                                            {
                                                <h6>Purchase Order Received</h6>
                                            }
                                            else if (item.Transtype == 2)
                                            {
                                                <h6>Disbursement</h6>
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Qty)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Remark)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="@Url.Action("ShowDeActiveSupplierlist", "Clerk" )" class="btn btn-outline-success pull-right btn-flat m-b-50 m-t-50">Ok</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker();
            $("#datepicker").datepicker('option', "showAnim", 'slide');

            $("#datepicker1").datepicker();
            $("#datepicker1").datepicker('option', "showAnim", 'slide');


        });
    </script>
}

