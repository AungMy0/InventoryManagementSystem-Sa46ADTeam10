@model LUSSISADTeam10Web.Models.Clerk.InventoryViewModel

@{
    ViewBag.Title = "EditItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
    </style>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Edit Item</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li><a href="@Url.Action("Index", "Clerk")">Dashboard</a></li>
                        <li class="active">Edit Item</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content mt-3">
        <div class="animated fadeIn">


            <div class="card">
                <div class="card-header">
                    <i class="mr-2 fa fa-align-justify"></i>
                    <strong class="card-title"> Edit Item </strong>
                </div>
                <div class="card-body">
                    
                    <form asp-action="EditItem" asp-controller="Clerk" method="post">
                        <div class="form-horizontal">
                            <hr />
                            <div class="row">
                                <div class="col-md-4"> @Html.LabelFor(model => model.ItemDescription) </div>
                                <div class="col-md-6">
                                    @Html.DisplayFor(model => model.ItemDescription)
                                    @Html.HiddenFor(model => model.ItemDescription)
                                </div>
                            </div><br />
                            <div class="row">
                                <div class="col-md-4"> @Html.LabelFor(model => model.CategoryName) </div>
                                <div class="col-md-6">

                                    @Html.DropDownListFor(model => model.CategoryName, new SelectList(ViewBag.catlist))

                                </div>
                            </div>

                            <br />
                            <div class="row">
                                <div class="col-md-4">@Html.LabelFor(model => model.Stock) </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div><br />
                            <div class="row">
                                <div class="col-md-4">@Html.LabelFor(model => model.ReorderLevel)</div>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.ReorderLevel, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div><br />
                            <div class="row">
                                <div class="col-md-4"> @Html.LabelFor(model => model.ReorderQty)</div>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.ReorderQty, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">

                                    <input type="hidden" name="Invid" asp-for="@Model.Invid" value="@Model.Invid" />
                                    <input type="hidden" name="Itemid" asp-for="@Model.Itemid" value="@Model.Itemid" />
                                    <input type="hidden" name="UOM" asp-for="@Model.UOM" value="@Model.UOM" />
                                    <input type="hidden" name="CategoryName" asp-for="@Model.CategoryName" value="@Model.CategoryName" />
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
                <div><input type="Submit" class="btn btn-outline-success col-md-2 btn-flat m-b-30 m-t-30" value="Save"></div>
                        <br />

                      
                            <div>
                                @Html.ActionLink("Back to List", "Manage")
                            </div><br />
                       


                        </div>
            </div>



        </div>
   


}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
