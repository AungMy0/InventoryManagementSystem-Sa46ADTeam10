@model LUSSISADTeam10Web.Models.APIModels.RequisitionWithDisbursementModel

@{
    ViewBag.Title = "Disbursement Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
    </style>
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Title Here</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="@Url.Action("Index", "Clerk")">Dashboard</a></li>
                    <li><a href="@Url.Action("DisbursementLists", "Clerk")">Disbursements List</a></li>
                    <li class="active">Disbursement Detail</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">


        <div class="card">
            <div class="card-header">
                <i class="mr-2 fa fa-align-justify"></i>
                <strong class="card-title"> Requisition ID : @Model.Reqid </strong>
            </div>
            <div class="card-body">

                <div class="mx-auto d-block">
                    <h5 class="text-sm-center text-info"> <i class="fa fa-camera fa-3x"></i><br /> Disbursement Detail </h5><br />
                    <h6>Raised By :  @Model.Rasiedbyname </h6><br />
                    <h6>Approved By :  @Model.Approvedbyname </h6><br />
                    <h6>Collection Point : @Model.Cpname</h6><br />
                    <h6>Locker Name : @Model.LockerName</h6><br />
                    <h6>Requested Date :  @Model.Reqdate.Value.ToString("d")</h6><br />
                    <h6>Status : Delivered</h6><br />
                    <div class="text-sm-center">

                        <table class="table table-bordered table-hover">
                            <thead class="table-info">
                                <tr>
                                    <th>Item</th>
                                    <th>Category</th>
                                    <th>Request Qty</th>
                                    <th>Approved Qty</th>
                                    <th>UOM</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Requisitiondetails)
                                {
                                    <tr>
                                        <td>@item.Itemname</td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.RequestQty</td>
                                        <td>@item.ApprovedQty</td>
                                        <td>@item.UOM</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>


                <hr>


                <div class="card-text text-sm-right">
                    Approved By : <strong>@Model.Approvedbyname</strong>
                </div>




            </div>
        </div>



    </div>
</div>

@section Scripts {
    <script type="text/javascript"></script>
}
