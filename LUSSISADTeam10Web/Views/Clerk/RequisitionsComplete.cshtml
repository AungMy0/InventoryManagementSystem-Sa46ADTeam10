@model IEnumerable<LUSSISADTeam10Web.Models.APIModels.RequisitionModel>

@{
    ViewBag.Title = "Requisition List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
    </style>
}
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Requisition List</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">

                    <li><a href="@Url.Action("Index", "HOD")">Dashboard</a></li>
                    <li class="active">Previous Disbursements</li>

                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <i class="mr-2 fa fa-align-justify"></i>
                        <strong class="card-title">Requisition List</strong>
                    </div>
                    <div class="card-body">
                        <div>  <h5 class="text-sm-center text-info"> <i class="fa fa-history fa-3x"></i><br /> Previous Disbursements </h5></div><br />
                        @if (Model.Count() > 0)
                        {

                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead class="table-info">
                                    <tr>
                                        <td>
                                            Date
                                        </td>
                                        <td>
                                            Raised By
                                        </td>
                                        <td>
                                            Approved By
                                        </td>
                                        <td>
                                            Department Name
                                        </td>
                                        <td>
                                            Collection Point
                                        </td>
                                        <td>
                                            Status
                                        </td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @item.Reqdate.Value.ToString("d")
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Rasiedbyname)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Approvedbyname)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Depname)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Cpname)
                                            </td>
                                            <td>
                                                @if (item.Status == 4)
                                                {
                                                    <span>Item Delivered</span>
                                                }
                                                else if (item.Status == 4)
                                                {
                                                    <span>Outstandings</span>
                                                }
                                                else
                                                {
                                                    <span>Completed</span>
                                                }


                                            </td>
                                            <td>
                                                <a href="@Url.Action("DisbursementDetail", "Clerk", new { id = item.Reqid })" class="btn btn-outline-info"><i class="fa fa-check"></i> Disbursement</a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>

                            </table>
                        }


                        else
                        {
                            <h3 class="text-danger pb-2 display-5"> There is no requisition for this department! </h3>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

