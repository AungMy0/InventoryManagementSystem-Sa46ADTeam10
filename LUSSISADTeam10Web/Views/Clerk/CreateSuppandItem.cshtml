
@{
    ViewBag.Title = "CreateSuppandItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Styles {
    <style>
        @@media only screen and (max-width: 600px) {


            .hideinmobile {
                display: none;
            }

            
        }
    </style>
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Create Supplier and Item </h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8 hideinmobile">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="@Url.Action("Index", "Clerk")">Dashboard</a></li>
                    <li class="active"></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">

        <div class="card">

            <div class="card-body">
                <div>  <h5 class="text-sm-center text-info hideinmobile"> <i class="fa fa-group fa-3x"></i><br /> Create Suppliers/Items </h5></div><br />

                <div class="container">

                    <div class="panel-group" id="accordion1" role="tablist">
                        <div class="panel" style="border: 1px dotted skyblue; margin: 10px; padding:10px;">
                            <div class="panel-heading" role="tab" id="panel">
                                <h4 class="panel-title">

                                    <a class="text-info" data-toggle="collapse" data-parent="#accordion1" data-target="#collapseOne" href="#collapseOne" aria-expanded="true" aria-controls="accordion1">
                                        Import Supplier
                                    </a>
                                </h4>
                            </div>

                            <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="collapseOne">
                                <div class="panel">
                                    @using (Html.BeginForm("importsupplier", "Clerk", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {

                                        <br />
                                        @Html.Raw(ViewBag.Error)

                                        <input type="file" name="excelfile" />
                                        <br />
                                        <br />
                                        <input type="submit" value="Import" class="btn btn-outline-info" />
                                        <br />
                                        <br />
                                    }
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                    </div>

                    <div class="panel-group" id="accordion2" role="tablist">
                        <div class="panel" style="border: 1px dotted skyblue; margin: 10px; padding:10px;">
                            <div class="panel-heading" role="tab" id="panel1">
                                <h4 class="panel-title">

                                    <a class="text-info" data-toggle="collapse" data-parent="#accordion2" data-target="#collapseTwo" href="#collapseTwo" aria-expanded="true" aria-controls="accordion2">
                                        Import Supplier Items
                                    </a>
                                </h4>
                            </div>

                            <div id="collapseTwo" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="collapseTwo">
                                <div class="panel1">
                                    @using (Html.BeginForm("csvsupplier", "Clerk", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <br />
                                        @Html.Raw(ViewBag.Error)

                                        <input type="file" name="excelfile" />
                                        <br />
                                        <br />
                                        <input type="submit" value="Import" class="btn btn-outline-info" />
                                        <br />
                                        <br />

                                    }

                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                    </div>


                </div>


            </div>
        </div>

    </div>
</div>




@section Scripts {

    <link href="~/Styles/css/accordion.css" rel="stylesheet" />
}

