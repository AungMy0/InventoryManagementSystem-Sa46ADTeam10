@model LUSSISADTeam10Web.Models.APIModels.RequisitionModel

@{
    ViewBag.Title = "Requisition Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
    </style>
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Requisition Detail</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="@Url.Action("Index", "HOD")">Dashboard</a></li>
                    <li><a href="@Url.Action("OrderHistory", "HOD")">Order History</a></li>
                    <li class="active">Requisition Detail</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">


        <div class="card">
            <div class="card-header">
                <i class="mr-2 fa fa-align-justify"></i>
                <strong class="card-title"> Requisition Detail : @Model.Reqid </strong>
            </div>
            <div class="card-body">


                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Reqid)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Reqid)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Raisedby)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Raisedby)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Rasiedbyname)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Rasiedbyname)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Approvedby)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Approvedby)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Approvedbyname)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Approvedbyname)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Depid)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Depid)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Depname)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Depname)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Cpid)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Cpid)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Cpname)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Cpname)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Status)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Reqdate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Reqdate)
                    </dd>

                </dl>

                <table>

                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>Qty</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var reqdet in Model.Requisitiondetails)
                        {
                            <tr>
                                <td>@reqdet.Itemname</td>
                                <td>@reqdet.Qty</td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>
        </div>



    </div>
</div>

@section Scripts {
    <script type="text/javascript"></script>
}




