@model IEnumerable<LUSSISADTeam10Web.Models.APIModels.RequisitionModel>


@{
    ViewBag.Title = "Previous Requisition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
    </style>
}
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Previous Requisitions</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="@Url.Action("Index", "HOD")">Dashboard</a></li>
                    <li class="active">Previous Requisitions</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">

                    <div class="card-body">
                        <h5 class="text-sm-center text-info"> <i class="fa fa-history fa-3x"></i><br /> Previous Requisitions</h5><br />
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead class="table-info">
                                <tr>

                                    <th>
                                        Date
                                    </th>
                                    <th>
                                        Raised By
                                    </th>
                                    <th>
                                        Approved By
                                    </th>
                                    <th>
                                        Collection Point
                                    </th>
                                    <th>
                                        Detail
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            @item.Reqdate.Value.ToString("d")
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Rasiedbyname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Approvedbyname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cpname)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("RequisitionDetail", "HOD",  new {id = item.Reqid }, null)"> <i class="text-info fa fa-align-justify"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


