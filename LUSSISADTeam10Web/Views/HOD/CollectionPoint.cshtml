@model IEnumerable<LUSSISADTeam10Web.Models.APIModels.CollectionPointModel>
@{
    ViewBag.Title = "Collection Point";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>

    </style>
}
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Collection Point</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="@Url.Action("Index", "HOD")">Dashboard</a></li>
                    <li class="active">Collection Point</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content mt-3">
    <div class="animated fadeIn">

        <div class="card">
            <div class="card-header">
                <i class="mr-2 fa fa-align-justify"></i>
                <strong class="card-title"> Current Collection Point : <span class="text-info">@ViewBag.ActiveCollectionPoint </span></strong>
            </div>
            <div class="card-body">
                @if (ViewBag.PendingCPR)
                {

                    <h5 class="text-sm-center text-info"> <i class="fa fa-map-marker fa-3x"></i><br /> Pending Collection Point Request </h5><br />



                    foreach (var item in ViewBag.PendingCollectionPoints)
                    {
                        <h5>Location Name : @item.CpName</h5><br />
                        <h5>Location : @item.CpLocation</h5>
                        <br />

                        <div id="map_populate" style="width:100%; height:200px;"></div>
                        <br />
                        <div class="card-text text-sm-right">
                            <a href="@Url.Action("CancelCollectionPoint", "HOD", new { id = item.DeptCpID })" class="btn btn-outline-danger">Cancel Request</a>
                        </div>
                    }

                }

                else
                {

                    <h5 class="text-sm-center text-info"> <i class="fa fa-map-marker fa-3x"></i><br /> Change Collection Point </h5><br />


                    <form asp-action="CollectionPoint" asp-controller="HOD" method="post">
                        <div class="form-check">
                            @foreach (var item in ViewBag.CollectionPointsList)
                            {
                                <div class="radio">
                                    <label for="@item.Code" class="form-check-label ">
                                        <input asp-for="SelectedRole" type="radio" id="@item.Code" name="id"
                                               @if (item.Value == ViewBag.ActiveCollectionPoint) { @: checked
                                               }
                                               value="@item.Code" class="ifrm-check-input"> @item.Value
                                        </label>
                                    </div>
                                    <br />
                                }
                            <br />
                            <input type="Submit" class="btn btn-outline-info m-b-30 m-t-30 pull-right" value="Change Collection Point">
                        </div>
                    </form>
                }
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAZW2GmsDAt2u4nAWt0dmUOg-S82bFKmW8&callback=initMap" type="text/javascript"></script>
    <script type="text/javascript">
        var mapcode;
        var diag;
        var marker;

        function initMap() {
            var lat = 21.9874;
            var lng = 96.0832;
            mapcode = new google.maps.Geocoder();
            var lnt = new google.maps.LatLng(lat, lng);
            var diagChoice = {
                zoom: 13,
                center: lnt,
                diagId: google.maps.MapTypeId.ROADMAP
            }
            diag = new google.maps.Map(document.getElementById('map_populate'), diagChoice);

            mark(lnt);

            function mark(location) {
                marker = new google.maps.Marker({
                    map: diag,
                    draggable: true,
                    position: location
                });
            }
        }
        window.onload = initMap;
    </script>
}