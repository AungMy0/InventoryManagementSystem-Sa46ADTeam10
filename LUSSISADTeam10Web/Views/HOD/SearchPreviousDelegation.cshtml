@model LUSSISADTeam10Web.Models.HOD.EditDelegationViewModel

@{
    ViewBag.Title = "SearchPreviousDelegation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
    </style>
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Delegate Authority</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="@Url.Action("Index", "HOD")">Dashboard</a></li>
                    <li class="active">Delegation</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">

        @using (Html.BeginForm("SearchPreviousDelegation", "HOD", new { id = @ViewBag.Deleid }))
        {

            <div class="card">
                <div class="card-header">
                    <i class="mr-2 fa fa-align-justify"></i>
                    <strong class="card-title"> Previous Delegation </strong>
                    <a href="@Url.Action("CreateDelegationList", "HOD")" class="btn btn-outline-success">Create</a>
                </div>
                <div class="card-body">
                    @if (ViewBag.name == "")
                    {
                        <p>There is no previous delegation.</p>

                    }
                    else
                    {
                        <table class="table">
                            <tr>
                                <th>
                                    <p>Name</p>
                                </th>
                                <td>
                                    @ViewBag.name
                                </td>
                                <th></th>
                            </tr>
                            <tr>
                                <th>
                                    <p>Start Date</p>
                                </th>
                                <td>
                                    @ViewBag.StartDate
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <p>End Date</p>
                                </th>
                                <td>
                                    @Html.TextBoxFor(Model => Model.EndDate, new { id = "datepicker" })
                                </td>
                            </tr>
                        </table>
                        @Html.HiddenFor(Model => Model.StartDate, new { id = @ViewBag.StartDate });
                        @Html.HiddenFor(Model => Model.Userid, new { id = @ViewBag.Userid});
                        @Html.HiddenFor(Model => Model.Deleid, new { id = @ViewBag.Deleid});

                    }

                    <a href="@Url.Action("CancelDelegation", "HOD", new { id = @ViewBag.Deleid })" class="btn btn-outline-danger">Delete</a>
                    <input type="Submit" class="btn btn-outline-success" value="Update">
                </div>
            </div>
        }
        </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker();

            $("#datepicker").datepicker('option', "showAnim", 'slide');
            $("#datepicker").datepicker('option', { minDate: +0 });
            $("#datepicker").datepicker('setDate', '@ViewBag.Enddate')


        });
    </script>
}
