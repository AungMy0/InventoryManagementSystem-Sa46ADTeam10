@model IEnumerable<LUSSISADTeam10Web.Models.APIModels.RequisitionModel>

@{
    ViewBag.Title = "Requisitions List";
}
<h2>RequisitionsList</h2>

<br />
<table id="myTable" class="table table-striped table-bordered">
    <thead>
        <tr>

            <th>
                Date
            </th>
            <th>
                Raised By
            </th>
            <th>
                Approved By
            </th>
            <th>
                Department Name
            </th>
            <th>
                Collection Point
            </th>
            <th>
                Status
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.reqdate.Value.ToString("d")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rasiedbyname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.approvedbyname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.depname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cpname)
                </td>
                <td>
                    @item.status
                </td>
                <td>
                    <a href="@Url.Action("TrackRequisition", "HOD",  new {id = item.reqid }, null)" class="btn btn-info">Track</a>
                </td>

            </tr>
        }
    </tbody>

</table>

