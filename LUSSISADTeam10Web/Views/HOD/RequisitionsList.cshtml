
@model IEnumerable<LUSSISADTeam10Web.Models.APIModels.RequisitionModel>

@{
    ViewBag.Title = "Requisition List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
    </style>
}
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Item List</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">

                    <li><a href="@Url.Action("Index", "HOD")">Dashboard</a></li>
                    <li class="active">Requisition List</li>

                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <i class="mr-2 fa fa-align-justify"></i>
                        <strong class="card-title">Requisition List</strong>
                    </div>
                    <div class="card-body">
                        @if (Model.Count() > 0)
                        {

                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead class="table-info">
                                    <tr>
                                        <td>
                                            Date
                                        </td>
                                        <td>
                                            Raised By
                                        </td>
                                        <td>
                                            Approved By
                                        </td>
                                        <td>
                                            Department Name
                                        </td>
                                        <td>
                                            Collection Point
                                        </td>
                                        <td>
                                            Status
                                        </td>
                                        <td>Action</td>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @item.Reqdate.Value.ToString("d")
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Rasiedbyname)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Approvedbyname)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Depname)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Cpname)
                                            </td>
                                            <td>
                                                @switch (item.Status)
                                                {
                                                    case 0:
                                                        <span>Waiting for Approval</span>
                                                        break;
                                                    case 1:
                                                        <span>Waiting for Actknowledgement</span>
                                                        break;
                                                    case 2:
                                                        <span>Request Pending</span>
                                                        break;
                                                    case 3:
                                                        <span>Preparing</span>
                                                        break;
                                                    case 4:
                                                        <span>Ready to Collect</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @if (item.Status == 0)
                                                {
                                                    <a href="@Url.Action("ApproveRequisition", "HOD", new { id = item.Reqid })" class="btn btn-outline-info"><i class="fa fa-check"></i> Approve</a>
                                                }
                                                else if (item.Status <= 4)
                                                {
                                                    <a href="@Url.Action("TrackRequisition", "HOD", new { id = item.Reqid }, null)" class="btn btn-outline-info"><i class="fa fa-location-arrow"></i> Track</a>
                                                }
                                            </td>

                                        </tr>
                                    }
                                </tbody>

                            </table>
                        }


                        else
                        {
                            <h3 class="text-danger pb-2 display-5"> There is no requisition for this department! </h3>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


