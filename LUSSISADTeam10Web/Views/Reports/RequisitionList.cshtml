@model LUSSISADTeam10Web.Models.Report.RequisitionListViewModel

@{
    ViewBag.Title = "RequisitionList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RequisitionList</h2>

@if (ViewBag.Count == 0)
{

<form asp-action="aa" asp-controller="Reports" method="post">
    <h2>ItemUsageByClerk</h2>
    <div class="row">
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.deptid, new SelectList(ViewBag.departmentlist))

        </div>

        <br />


    </div>
    <div class="row">
        <div class="col-md-4"><b>@Html.LabelFor(model => model.startdate)</b> </div>
        <div class="col-md-5">@Html.TextBoxFor(model => model.startdate, new { id = "datepicker" })</div>
    </div><br />
    <div class="row">
        <div class="col-md-4"><b> @Html.LabelFor(model => model.enddate)</b> </div>
        <div class="col-md-5">@Html.TextBoxFor(model => model.enddate, new { id = "datepicker1" })</div>
        <br />
        <br />
    </div>





    @*<input type="hidden" name="supplier1" asp-for="@Model.supplier1" value="@Model.supplier1" />
        <input type="hidden" name="supplier2" asp-for="@Model.supplier2" value="@Model.supplier2" />
        <input type="hidden" name="supplier3" asp-for="@Model.supplier3" value="@Model.supplier3" />*@




    <input type="hidden" name="deptid" asp-for="model.deptid" value="@Model.deptid" />

    <input type="hidden" name="startdate" asp-for="model.startdate" value="@Model.startdate"  />
    <input type="hidden" name="enddate" asp-for="model.enddate" value="@Model.enddate" />




    <input type="submit" formmethod="post" value="Submit" />

</form>

    <div class="card-body">

        @if (ViewBag.Count == 0)
        {

            <h1>There is no transaction for this item </h1>
        }
        else
        {

            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                <thead class="table-info">
                    <tr>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.deptid)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.reqdate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.status)
                        </th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.rd)
                    {
                        <tr>
                            <td>
                                @item.deptid
                            </td>
                            <td>
                                @item.reqdate

                            </td>
                            <td>
                                @item.status
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }



    </div>
    }



@section Scripts {
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker();
            $("#datepicker").datepicker('option', "showAnim", 'slide');
            $("#datepicker").datepicker('setDate', 'today')
            $("#datepicker1").datepicker();
            $("#datepicker1").datepicker('option', "showAnim", 'slide');
            $("#datepicker1").datepicker('setDate', 'today')

        });
    </script>

    <script>
        $(document).ready(function () {

            document.getElementById("div1").style.display = "none";


            $("href").click(function () {

                $("#div1").fadeToggle();

            });
        });
    </script>
}
