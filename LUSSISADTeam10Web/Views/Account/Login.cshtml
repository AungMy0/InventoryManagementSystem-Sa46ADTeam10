<!doctype html>
<html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" href="styles/css/normalize.css">
    <link rel="stylesheet" href="styles/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles/css/font-awesome.min.css">
    <link rel="stylesheet" href="styles/css/themify-icons.css">
    <link rel="stylesheet" href="styles/css/flag-icon.min.css">
    <link rel="stylesheet" href="styles/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="styles/scss/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
</head>
<body class="bg-dark">

    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <a href="index.html">
                        <img class="align-content" src="images/logo.png" alt="">
                    </a>
                </div>
                <div class="login-form">
                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                        <div class="col-md-12">
                            <div class="text-center m-b-md">
                                <small>Login Panel</small>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="hpanel">
                                <div class="panel-body">
                                    <div class="form-group" style="margin:10px">
                                        <label class="control-label" for="email">Username</label>
                                        <input asp-for="Username" placeholder="Username" title="Please enter you username" required="" value="@Model.Username" name="Username" id="Username" class="form-control" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                    <div class="form-group" style="margin:10px">
                                        <label class="control-label" for="password">Password</label>
                                        <input asp-for="Password" type="password" title="Please enter your password" placeholder="Password" required="" value="" name="password" id="password" class="form-control">

                                    </div>
                                    <button class="btn btn-success btn-block">Login</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="styles/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="styles/js/popper.min.js"></script>
    <script src="styles/js/plugins.js"></script>
    <script src="styles/js/main.js"></script>

</body>
</html>